<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:background= "#2b2727"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPosterImage"
        android:layout_width="90dp"
        android:layout_height="135dp"
        android:layout_marginRight="5dp"
        app:srcCompat="@android:color/background_dark" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ivPosterImage"
        android:layout_alignRight="@+id/ivPosterImage"
        android:layout_marginEnd="-317dp"
        android:layout_marginRight="-317dp"
        android:text="Movie Title"
        android:textColor="#ffffff"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="318dp"
        android:layout_height="108dp"
        android:layout_below="@+id/ivPosterImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="-105dp"
        android:layout_toEndOf="@+id/ivPosterImage"
        android:layout_toRightOf="@+id/ivPosterImage"
        android:text="Movie overview and Synopsis"
        android:textColor="@android:color/darker_gray" />
</RelativeLayout>